// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  password String

  profile Profile?

  @@map("users")
}

model Profile {
  id        String  @id @default(cuid())
  full_name String
  phone     String?

  user_id String @unique
  user    User   @relation(fields: [user_id], references: [id])

  @@map("profiles")
}
